# Frontend Environment Configuration Template for DepScan
# Copy this file to .env for development

# =============================================================================
# API SETTINGS
# =============================================================================
# Backend API URL (adjust based on your environment)
VITE_API_URL=http://localhost:8000

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application name
VITE_APP_NAME=DepScan

# Application version (will be read from package.json if not set)
VITE_APP_VERSION=

# Environment (development, staging, production)
VITE_NODE_ENV=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable debug mode (shows additional debug information)
VITE_DEBUG_MODE=true

# Enable mock data for development (when backend is not available)
VITE_ENABLE_MOCK_DATA=false

# =============================================================================
# UI SETTINGS
# =============================================================================
# Default theme (light, dark, auto)
VITE_DEFAULT_THEME=light

# Enable animations
VITE_ENABLE_ANIMATIONS=true

# Results per page for pagination
VITE_RESULTS_PER_PAGE=20