# Frontend Staging Environment Configuration

# =============================================================================
# API SETTINGS
# =============================================================================
VITE_API_URL=http://dep-scanner:8000
VITE_API_TIMEOUT=30000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
VITE_APP_NAME=DepScan (Staging)
VITE_NODE_ENV=production

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_DEBUG_MODE=false
VITE_ENABLE_MOCK_DATA=false

# =============================================================================
# UI SETTINGS
# =============================================================================
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true
VITE_RESULTS_PER_PAGE=20

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Disable source maps for staging
VITE_SOURCE_MAPS=false

# Disable HMR for staging
VITE_HMR=false