# Development environment configuration for DepScan
# Copy this to .env for local development

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
DEBUG=true
LOG_LEVEL=DEBUG
RELOAD=true

# Cache Configuration (shorter TTL for development)
CACHE_TTL_HOURS=1
CACHE_CLEANUP_INTERVAL_HOURS=1
CACHE_DB_PATH=data/osv_cache.db

# Version resolution cache settings (shorter for dev)
NPM_VERSION_CACHE_TTL=1800
PYPI_VERSION_CACHE_TTL=1800

# Transitive resolution settings
ENABLE_TRANSITIVE_RESOLUTION=true
MAX_TRANSITIVE_DEPTH=8
MAX_CONCURRENT_REQUESTS=5

# OSV.dev API Configuration
OSV_API_URL=https://api.osv.dev
OSV_RATE_LIMIT_CALLS=100
OSV_RATE_LIMIT_PERIOD=60

# Security settings for development
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Development paths
DATA_DIR=data
LOGS_DIR=logs