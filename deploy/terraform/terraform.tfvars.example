# Example Terraform variables file for DepScan deployment
# Copy this to terraform.tfvars and customize for your deployment

# Required - AWS Configuration
aws_region   = "us-east-1"
project_name = "depscan"
environment  = "prod"

# Optional - Custom Domain Configuration
# Leave domain_name empty to use ALB DNS name
domain_name     = ""  # e.g., "depscan.yourdomain.com"
certificate_arn = ""  # Leave empty to auto-create certificate

# Optional - GitHub Actions Integration
# Set this to enable OIDC authentication for GitHub Actions
github_repo = ""  # e.g., "your-username/your-repo-name"

# Resource Configuration - Adjust based on your needs
backend_cpu            = 512   # 0.5 vCPU
backend_memory         = 1024  # 1 GB RAM
frontend_cpu           = 256   # 0.25 vCPU  
frontend_memory        = 512   # 0.5 GB RAM
backend_desired_count  = 1     # Number of backend containers
frontend_desired_count = 1     # Number of frontend containers

# Network Configuration
allowed_cidrs = ["0.0.0.0/0"]  # Restrict to specific IPs for better security

# Application Configuration
backend_port  = 8000
frontend_port = 80

# Resource Tags
tags = {
  Project     = "DepScan"
  Environment = "production"
  ManagedBy   = "Terraform"
  Owner       = "your-name"
  CostCenter  = "engineering"
}