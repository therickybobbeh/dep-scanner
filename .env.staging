# Staging Environment Configuration for DepScan

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENV=staging
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# DATABASE & CACHING
# =============================================================================
CACHE_DB_PATH=/app/data/osv_cache.db

# Moderate cache TTL for staging
CACHE_TTL_HOURS=12

# Regular cleanup for staging
CACHE_CLEANUP_INTERVAL_HOURS=3

# =============================================================================
# OSV.dev API CONFIGURATION
# =============================================================================
OSV_API_URL=https://api.osv.dev

# Standard rate limits for staging
OSV_RATE_LIMIT_CALLS=100
OSV_RATE_LIMIT_PERIOD=60

# =============================================================================
# WEB SERVER SETTINGS
# =============================================================================
# Moderate workers for staging
MAX_WORKERS=2

# Standard keepalive for staging
KEEPALIVE_TIMEOUT=30

# Info level logging for staging
LOG_LEVEL=INFO

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Allowed host headers for staging
ALLOWED_HOSTS=localhost,dep-scanner,staging.depscan.example.com,frontend

# CORS origins for staging (update with your actual staging domain)
CORS_ORIGINS=https://staging.depscan.example.com,https://staging-api.depscan.example.com

MAX_REQUEST_SIZE=16777216
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# =============================================================================
# PATHS
# =============================================================================
DATA_DIR=/app/data
LOGS_DIR=/app/logs

# =============================================================================
# STAGING-SPECIFIC SETTINGS
# =============================================================================
# Disable auto-reload for staging
AUTO_RELOAD=false