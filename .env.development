# Development Environment Configuration for DepScan

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENV=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# DATABASE & CACHING
# =============================================================================
# Local development database path
CACHE_DB_PATH=./data/dev_osv_cache.db

# Shorter cache TTL for development to test fresh data more often
CACHE_TTL_HOURS=2

# More frequent cleanup for development
CACHE_CLEANUP_INTERVAL_HOURS=1

# =============================================================================
# OSV.dev API CONFIGURATION
# =============================================================================
OSV_API_URL=https://api.osv.dev

# Lower rate limits for development to avoid hitting API limits during testing
OSV_RATE_LIMIT_CALLS=50
OSV_RATE_LIMIT_PERIOD=60

# =============================================================================
# WEB SERVER SETTINGS
# =============================================================================
# Fewer workers for development
MAX_WORKERS=2

# Shorter keepalive for development
KEEPALIVE_TIMEOUT=10

# Debug level logging for development
LOG_LEVEL=DEBUG

# =============================================================================
# CORS SETTINGS
# =============================================================================
# Allow all common development ports
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173,http://localhost:8080

# =============================================================================
# SECURITY SETTINGS (Relaxed for development)
# =============================================================================
MAX_REQUEST_SIZE=16777216
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=false

# =============================================================================
# PATHS
# =============================================================================
DATA_DIR=./data
LOGS_DIR=./logs

# =============================================================================
# DEVELOPMENT-SPECIFIC SETTINGS
# =============================================================================
# Enable auto-reload for development (used by uvicorn)
AUTO_RELOAD=true

# Development hot reload
RELOAD_DIRS=backend